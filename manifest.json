{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,

  "name": "Debug CSS",
  "short_name": "Debug CSS by Pranay Joshi",
  "description": "Adds outline to all elements on the page to show the culprit element which is changing desired layout, Hold Ctrl and hover to get more detail",
  "version": "1.1",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Toggle Debug CSS",
    "default_icon": {
      "19": "images/toolbar-chrome.png",
      "38": "images/toolbar-chrome@2x.png"
    }
  },
  "commands": {
    "toggle-pin": {
      "suggested_key": { "default": "Alt+Shift+C" },
      "description": "Toggle Debug CSS"
    }
  },
  "icons": {
      "128": "icon_128.png",
      "16": "icon_16.png",
      "48": "icon_48.png"
   },

  "web_accessible_resources": [{
    "resources": [
      "debugCSS.min.css",
      "debugCSS.js"
    ],
    "matches": ["<all_urls>"]
  }]
}
